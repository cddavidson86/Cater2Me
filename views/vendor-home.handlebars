<div class="container vendorHome-container">
    <h3 id="vendorTitle">Vendor's Homepage</h3>
    <div class="eventList" id="currentJobs">
        <h4>Accepted Jobs:</h4>
        {{#each accepted.events}}
            <li>
                 occasion: {{ this.occasion }}
                 courses: {{ this.courses }}
                 <button class="moreInfoBtn" href="/api/events/{{this.eventid}}" data-id="{{this.eventid}}">More Info</button>

            </li>
        {{/each}}

    </div>
    <div class="eventList" id="availableJobs">
        <!-- Search form -->
        <form class="form-inline">
            <div class="form-group w-50">
                <i class="fas fa-search" aria-hidden="true"></i>
                <input class="form-control form-control-md ml-3 w-100" type="text" placeholder="Search"
                    aria-label="Search">
            </div>
            <button id="eventSearchSubmit" class="btn btn-primary">Submit</button>
        </form>
        <hr>
        <div id="eventListHB">
            <ul>
            {{#each available.events}}
                <li>
                    occasion: {{ this.occasion }}
                    courses: {{ this.courses }}
                    <button class="moreInfoBtn" href="/api/events/{{ this.eventid }}" data-id="{{ this.eventid }}"> More Info </button>
                    <button class="vendorAcceptBtn" event-id="{{ this.eventid }}"> Accept </button>
                </li>
            {{/each}}
            </ul>
        </div>
    </div>
</div>

<script type="text/javascript" src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

<script type="text/javascript" src="/js/vendor-home.js"></script>