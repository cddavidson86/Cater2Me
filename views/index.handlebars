<div id="home">



  <div class="container index-body-container">
    <div class="row login-row">
      <div class="col-8 offset-1 login-col">
        <h3>Login: </h3>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="loginUsername">Username</label>
            <input type="text" id="loginUsername" class="form-control" aria-describedby="loginUsername"
              placeholder="Enter your Username">
          </div>
          <div class="form-group">
            <label for="loginPw">Password</label>
            <input type="text" id="loginPw" class="form-control" aria-describedby="loginPw"
              placeholder="Enter your Password">
          </div>
          <a href="/create">Create an Account</a>
          <button id="submit" class="btn btn-primary float-right submitButton">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="/js/login.js"></script>