<div class="container customer-home-body-container">

    <h1 class="cust-name" id="name-of-customer">{{event.name}}</h1>

    <!-- CUSTOMER VIEW JOBS ROW -->
    <div class="row view-job-row">
        <div class="col-12-lg view-job-col txt-white">
            <table id="madeEventTable">
                <thead>
                    <tr>
                        <th>NAME</th>
                        <th>PHONE</th>
                        <th>CITY</th>
                        <th>STATE</th>
                        <th>OCCASION</th>
                        <th>SIZE</th>
                        <th>COURSES</th>
                        <th>CONSIDERATION</th>
                        <th>ALCOHOL</th>
                        <th>DECOR</th>
                        <th>COMMENTS</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{event.name}}</td>
                        <td>{{event.phone}}</td>
                        <td>{{event.city}}</td>
                        <td>{{event.state}}</td>
                        <td>{{event.occasion}}</td>
                        <td>{{event.size}}</td>
                        <td>{{event.courses}}</td>
                        <td>{{event.consideration}}</td>
                        <td>{{event.alcohol}}</td>
                        <td>{{event.decor}}</td>
                        <td>{{event.comments}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- CUSTOMER ADD NEW EVENT BUTTON-ROW  -->
    <div class="container">
        <div class="row">
            
            <div class="col-lg-3"></div>
            <div class="col-lg-2"></div>
            
            <div class="col-lg-4">
                {{#if event.vendorid}}
                    <button vendor-ID="{{event.vendorid}}" type="button" class="btn btn-primary btn-lg" id="homeVendor">Back home</button>
                {{else}}
                    <button type="button" vendor-id="{{vendorid}}" event-id="{{event.eventid}}" class="vendorAcceptBtn" id="eventAccept">Accept Event</button>
                 {{/if}}
            </div>
            
            <div class="col-lg-3"></div>
        </div>
    </div>

    <script type="text/javascript" src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="/js/event.js"></script>

